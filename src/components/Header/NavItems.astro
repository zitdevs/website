---
import NavLink from "./NavLink.astro";

const { lang } = Astro.params;
const { tNav } = Astro.props;
---

<NavLink href={`/${lang}/`} className="font-semibold">
  {tNav?.home}
</NavLink>
<NavLink href={`/${lang}/#what-we-do`} className="font-semibold">
  {tNav?.about}
</NavLink>
<NavLink href={`/${lang}/#how-it-works`} className="font-semibold">
  {tNav?.how_it_works}
</NavLink>
<NavLink href={`/${lang}/services`} className="font-semibold">
  {tNav?.services}
</NavLink>
