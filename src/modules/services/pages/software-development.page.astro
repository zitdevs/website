                { type: "text", title: "Minimum 36 hours" },
                { type: "text", title: "Up to 400 hours" },
                { type: "text", title: "Up to 800 hours" },
                { type: "text", title: "From 1200 hours" },
              ],
            },
            {
              title: "Dedicated Project Manager",
              columns: [
                {
                  type: "icon",
                  included: true,
                  note: "per request (hourly rate)",
                },
                { type: "icon", included: true },
                {
                  type: "icon",
                  included: true,
                  note: "with bi-weekly reports",
                },
                {
                  type: "icon",
                  included: true,
                  note: "with daily updates, BA included",
                },
              ],
            },
            {
              title: "Technology Stack",
              columns: [
                { type: "text", title: "Flexible tech stack" },
                { type: "text", title: "Single tech stack" },
                { type: "text", title: "Multi-tech stack support" },
                { type: "text", title: "Custom tech stack, full integration" },
              ],
            },
          ]}
        />
        <PricingDetail
          popularColumn={1}
          category="Quality Assurance & Testing"
          features={[
            {
              title: "Code Review",
              columns: [
                {
                  type: "icon",
                  included: true,
                },
                { type: "icon", included: true },
                {
                  type: "icon",
                  included: true,
                },
                {
                  type: "icon",
                  included: true,
                },
              ],
            },
            {
              title: "QA & Testing",
              columns: [
                {
                  type: "text",
                  title: "Basic testing (hourly rate)",
                },
                {
                  type: "text",
                  title: "Standard testing",
                },
                {
                  type: "text",
                  title: "Advanced automated testing",
                },
                {
                  type: "text",
                  title: "Extensive testing including security audits",
                },
              ],
            },
            {
              title: "User Acceptance Testing",
              columns: [
                {
                  type: "text",
                  title: "Available as an add-on",
                },
                {
                  type: "icon",
                  included: false,
                },
                {
                  type: "icon",
                  included: true,
                },
                {
                  type: "icon",
                  included: true,
                },
              ],
            },
          ]}
        />
        <PricingDetail
          popularColumn={1}
