---
import { getI18n } from "src/i18n";
import Layout from "src/layouts/Layout.astro";
import ProcesCard from "../components/ProcesCard.astro";
import PricingCard from "../components/PricingCard.astro";

import ManagementSvg from "../assets/management.svg";
import DevTeamSvg from "../assets/dev-team.svg";
import CodeReviewSvg from "../assets/code-review.svg";
import ClientChecksSvg from "../assets/client-checks.svg";
import DeploySupportSvg from "../assets/deploy-support.svg";
import PricingDetail from "../components/PricingDetail.astro";

const { lang } = Astro.params as { lang: string };

const i18n = getI18n({ currentLocale: lang });
---

<Layout class="">
  <section
    class="md:h-screen md:max-h-[30vh] flex items-center flex-col justify-center text-white py-[40px] lg:px-60 bg-gradient-to-b from-secondary to-indigo-400 mb-10"
  >
    <div class="container">
      <h1 class="text-xl md:text-4xl font-bold text-center">
        Software Development
      </h1>
      <p class="text-sm md:text-[16px] text-center mt-4 max-w-[900px] mx-auto">
        At <strong>ZitDevs</strong>, we create
        <strong>custom software solutions</strong> tailored to your specific business
        needs. Our process ensures quality and efficiency from the initial consultation
        to final deployment, supported by our experienced team of developers and
        project managers.
      </p>
    </div>
  </section>

  <div class="container mb-10">
    <section>
      <h2 class="text-4xl font-semibold text-center mt-[70px] mb-10">
        Our Process
      </h2>

      <ul class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <ProcesCard
          title="Project Kickoff & Assignment"
          description="Your project begins with the assignment of a dedicated Project Manager (PM) who will oversee the project and serve as your main point of contact"
          image={ManagementSvg}
        />

        <ProcesCard
          title="Development Team Assembly"
          description="We assemble a team of expert developers tailored to the specific technologies and needs of your project."
          image={DevTeamSvg}
        />

        <ProcesCard
          title="Code Review & Quality Assurance"
          description="Throughout development, our team conducts rigorous code reviews and quality assurance testing to ensure the software meets all required standards."
          image={CodeReviewSvg}
        />
        <ProcesCard
          title="Staging & Client Review"
          description="Your software is deployed in a staging environment for final testing and client feedback before the official launch."
          image={ClientChecksSvg}
        />

        <ProcesCard
          title="Deployment & Support"
          description="We handle the deployment to your live environment and provide ongoing support to ensure the software runs smoothly. We also offer post-launch support for any issues that may arise."
          image={DeploySupportSvg}
          class="sm:col-span-2 sm:w-full sm:min-w-full sm:flex sm:items-center sm:justify-center sm:gap-8 sm:px-10"
          classes={{
            image: "sm:h-[200px]",
            imageContainer: "sm:w-[550px]",
          }}
        />
      </ul>
    </section>
    <span class="h-[100px] w-full block"></span>
    <section>
      <div class="mb-12 space-y-2">
        <h2 class="text-4xl font-semibold text-center">
          <span class="text-4xl font-semibold">Pricing</span>
        </h2>
        <div>
          <p class="text-center text-gray-800 max-w-[700px] mx-auto">
            Our pricing plans are designed to accommodate businesses of all
            sizes and budgets.<br /> Whether you're a startup looking to develop
            an
            <strong>MVP</strong> or a large enterprise seeking a highly customized
            solution,

            <strong>we have a plan that fits your needs.</strong>
          </p>
        </div>
      </div>

      <div
        class="grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 pt-[40px]"
      >
        <PricingCard
          classes={{
            header: "min-h-[90px]",
            title: "min-h-[45px]",
            feature: "min-h-[270px]",
          }}
          plan={{
            startingAt: true,
            description:
              "Ideal for mid-sized companies looking for more complex solutions.",
            name: "Growth Plan",
            features: [
              "Development Hours: Up to 800",
              "Project Management: Enhanced PM with bi-weekly reports",
              "Technology Stack: Multi-tech stack support",
              "Support: 60 days post-launch",
              "Extra Hours: $44.99/hour",
            ],
            price: 36000,
            cta: {
              text: "Contact Us",
              href: `/${lang}/contact`,
            },
          }}
        />
        <PricingCard
          mostPopular
          classes={{
            header: "min-h-[90px]",
            title: "min-h-[45px]",
            feature: "min-h-[270px]",
          }}
          plan={{
            startingAt: true,
            description: "Perfect for startups and small businesses.",
            name: "Essentials Plan",
            features: [
              "Development Hours: Up to 400",
              "Project Management: Dedicated PM",
              "Technology Stack: Single tech stack",
              "Support: 90 days post-launch",
              "Extra Hours: $39.99/hour",
            ],
            price: 12000,
            cta: {
              text: "Contact Us",
              href: `/${lang}/contact`,
            },
          }}
        />
        <PricingCard
          classes={{
            header: "min-h-[90px]",
            title: "min-h-[45px]",
            feature: "min-h-[270px]",
          }}
          plan={{
            startingAt: true,
            name: "Enterprise Excellence Plan",
            description:
              "Tailored for large enterprises needing a comprehensive solution.",
            features: [
              "Development Hours: From 1200",
              "Project Management: Premium PM with daily updates and BA included",
              "Technology Stack: Custom tech stack and full integration",
              "Support: 3 months with priority support",
              "Extra Hours: $49.99/hour",
            ],
            price: 95000,
            cta: {
              text: "Contact Us",
              href: `/${lang}/contact`,
            },
          }}
        />
        <PricingCard
          class="lg:col-span-3"
          classes={{
            header: "min-h-[90px] lg:min-h-fit",
            title: "min-h-[45px] lg:min-h-fit",
            feature: "min-h-[270px] lg:min-h-fit",
            button: "lg:w-fit",
            footer: "lg:flex",
          }}
          plan={{
            name: "FlexiDev Plan",
            description:
              "Flexible and scalable for businesses with changing needs.",
            features: [
              "Development Hours: Minimum 36 hours",
              "Project Management: Available on request",
              "Support: Pay-as-you-go",
              "Unlimited development hours",
            ],
            price: 25,
            priceFrequency: "hour",
            cta: {
              text: "Contact Us",
              href: `/${lang}/contact`,
            },
          }}
        />
      </div>
    </section>

    <span class="h-[120px] w-full block"></span>

    <section class="mb-[120px] hidden lg:block">
      <div class="mb-12 space-y-2">
        <h2 class="text-4xl font-semibold text-center">
          <span class="text-4xl font-semibold">
            Compare Our Pricing Plans
          </span>
        </h2>
      </div>
      <div class="space-y-8">
        <div class="grid gap-4 grid-cols-1 sm:grid-cols-5 pt-[40px]">
          <span class="col-span-1"></span>
          <PricingCard
            classes={{
              header: "min-h-[140px]",
              title: "min-h-[65px] text-lg xl:text-2xl",
              price: "text-xl xl:text-2xl",
            }}
            plan={{
              name: "FlexiDev Plan<br/>(Pay-As-You-Go)",
              description:
                "Businesses needing flexible development hours or ongoing support without long-term commitment.",

              price: 25,
              priceFrequency: "hour",
              cta: {
                text: "Contact Us",
                href: `/${lang}/contact`,
              },
            }}
          />
          <PricingCard
            mostPopular
            classes={{
              header: "min-h-[140px]",
              title: "min-h-[65px] text-xl xl:text-2xl",
              price: "text-xl xl:text-2xl",
            }}
