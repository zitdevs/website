---
// import { Button } from "../../components/button/Button";
import Button from "../../components/button/Button.astro";
import ItemCard from "./components/ItemCard.astro";

const { lang } = Astro.params;
const { tServices } = Astro.props;
const learnMore = false;
---

<section id="services" class="mx-auto max-w-7xl px-4 py-12 text-slate-800">
  <div
    class="mb-8 flex flex-col items-start justify-between gap-4 md:flex-row md:items-end md:px-8"
  >
    <h2 class="max-w-lg text-4xl font-semibold md:text-5xl">
      {tServices.title}
      <span class="text-slate-500"> {tServices.subtitle}</span>
    </h2>
    {learnMore && <Button>{tServices.learnMore}</Button>}
  </div>
  <div class="mb-4 grid grid-cols-12 gap-4">
    <ItemCard
      title={tServices.cards.softwareDevelopment.title}
      description={tServices.cards.softwareDevelopment.description}
      icon="code"
      variant="blue"
      cta={{
        href: `/${lang}/services/software-development`,
        text: tServices.cards.softwareDevelopment.cta,
      }}
    />
    <ItemCard
      title={tServices.cards.webDevelopment.title}
      description={tServices.cards.webDevelopment.description}
      icon="globe"
      variant="dark"
      cta={{
        href: `/${lang}/services/web-development`,
        text: tServices.cards.webDevelopment.cta,
      }}
    />
  </div>
  <div class="grid grid-cols-12 gap-4">
    <ItemCard
      title={tServices.cards.mobileAppDevelopment.title}
      description={tServices.cards.mobileAppDevelopment.description}
      icon="tablet-smartphone"
      variant="orange"
      cta={{
        href: `/${lang}/services/mobile-app-development`,
        text: tServices.cards.mobileAppDevelopment.cta,
      }}
    />
    <ItemCard
      title={tServices.cards.consultingStrategy.title}
      description={tServices.cards.consultingStrategy.description}
      icon="brain"
      variant="pink"
      cta={{
        href: `/${lang}/services/consulting-strategy`,
        text: tServices.cards.consultingStrategy.cta,
      }}
    />
  </div>
</section>
