---
import Button from "../../../components/button/Button.astro";
import { cn } from "../../../lib/utils";

const { id, title, cta, variant } = Astro.props;
const bg = variant === "left" ? "bg-primary" : "bg-[#0A0046]";
const rounded =
  variant === "left"
    ? "rounded-t-3xl lg:rounded-r-none lg:rounded-l-3xl"
    : "rounded-b-3xl lg:rounded-l-none lg:rounded-r-3xl";
---

<section id={`how-it-works:${id}`} class={`${bg} py-8 ${rounded} text-white`}>
  <div class="lg:max-w-[650px] mx-auto px-[2rem]">
    <h3 class="text-2xl font-bold">{title}</h3>
    <ul class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-9">
      <slot />
    </ul>
    <div class="min-h-[60px] flex justify-center mt-3">
      {
        !!cta && (
          <Button
            data-cta="contact"
            data-toggle={cta.toggle}
            className={cn("mt-4 px-10", {
              "bg-[#0A0046]": variant === "left",
            })}
            type="button"
            size="sm"
            variant={variant === "left" ? "secondary" : "default"}
          >
            {cta.text}
          </Button>
        )
      }
    </div>
  </div>
</section>
